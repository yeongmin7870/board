    <script>
        /**댓글 제출 버튼*/
        let btn_comment = document.getElementById("btn_comment");
        /**댓글 입력 input*/
        let input_comment_content = document.getElementById("input_comment_content");
        /**부모 댓글 div*/
        let comment_div = document.getElementById("comment_div");
        /**게시판 지울때 사용하는 토큰*/
        let board_delete_token = document.getElementById("board_delete_token");
        /**게시판 삭제 form*/
        let delete_board_form = document.getElementById("delete_board_form");
        /**게시판 삭제 버튼*/
        let btn_delete_board = document.getElementById("btn_delete_board");
        /**자식 댓글 div*/
        let newDiv = "";
        /**token값*/
        let token = getCookie('x_auth');

        let url = window.location.pathname;
        url = url.split('/');
        /**borard_id 가져올려고 url입력 후 짜름*/
        let board_id = url[4];

        /** 서버에서 해당 게시물 아이디 내용물 가져옴
         * 
         *   아이디, 내용, 날짜 html에 찍어줌
         * 
         */
        async function getComment() {
            let comment = await Get_pathVar(`http://localhost:3000/v3/board/comment/${board_id}`);
            

            for (let i = 0; i < comment.msg.length; i++) {
                let time = comment.msg[i].comment_time;
                time = new Date(time); // 시간을 보기 좋게 변경

                let comment_html = "<hr>"
                    + "<h5> 아이디: " + comment.msg[i].user_id + "</h5>"
                    + "<h2>" + comment.msg[i].comment_content + "</h2>"
                    + "<p>" + time.toLocaleString() + "</p>"
                    +`<form type="hidden" method="post" action="/v3/board/comment/${comment.msg[i].comment_id}?_method=DELETE">`
                        + `<input type="hidden" name="token" value="${token}">`
                        + `<button type=submit>` + "삭제" + "</button>";
                    + "</form>"
                newDiv = document.createElement("div");

                newDiv.innerHTML = comment_html;

                newDiv.setAttribute("id","comment_div_child");

                comment_div.appendChild(newDiv);

            }
        };
        
        /**
         * 댓글 작성 버튼 클릭하면 
         * 댓글 내용 입력받아서
         *  서버로 댓글 작성완료 응답을 받음
        */
        btn_comment.addEventListener('click', async () => {

            let url = 'http://localhost:3000/v3/board/comment';
            let data = {
                "comment_id":0,
                "user_id":"",
                "comment_content":`${input_comment_content.value}`,
                "board_id":`${board_id}`,
                "token":`${token}`,
            };
            let response = await Post_body(url,data);

            //기존에 댓글이 있다면 한번 지워주는 if문
            if(newDiv!=""){
            let parent = newDiv.parentElement; // 해당 자식태그 부모요소 가져오기
                while(parent.firstChild){
                    parent.removeChild(parent.lastChild); // 부모요소 안 자식태그 삭제
                }
            }        

            getComment(); //댓글 다시 불러오기

            input_comment_content.value="";
        })

        /**게시판 삭제 클릭시 토큰도 같이 body
         * 에 넘어가게 하기
        */
        board_delete_token.value=token;

        
        /**댓글 출력*/
        getComment();

    </script>
